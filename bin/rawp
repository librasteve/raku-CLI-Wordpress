#!/usr/bin/env raku

use lib '../lib';
use CLI::Wordpress;

enum Command <launch renew up down ps connect terminate>;

sub MAIN(
    Command $cmd,                           #= One of <launch renew up down ps connect terminate>
) {
    say $cmd;

    given $cmd {
        when 'launch' {
            Instance.new.launch
        }
        when 'renew' {
            Instance.new.renew
        }
        when 'up' {
            Instance.new.up
        }
        when 'down' {
            Instance.new.down
        }
        when 'ps' {
            Instance.new.ps
        }
        when 'connect' {
            Instance.new.connect
        }
        when 'terminate' {
            Instance.new.terminate
        }
    }
}


